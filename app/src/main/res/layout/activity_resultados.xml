<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CondutasMenos40">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="405dp"
        android:layout_height="177dp"
        app:srcCompat="@drawable/image2" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="97dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="• 1 - Birads I, Birads II:"
                    android:textColor="@color/pink"
                    android:textSize="24dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="328dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="35dp"
                    android:text="Orientações higienico-dietéticas e repetir anualmente a mamografia."
                    android:textSize="18dp" />

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC" />

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="105dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="• 2 - Birads III:"
                    android:textColor="@color/pink"
                    android:textSize="24dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:paddingLeft="10dp"
                    android:text="Marcar uma nova consulta com seis meses."
                    android:textSize="18dp" />

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC" />

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="87dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="• 3 - Birads IV, V e VI:"
                    android:textColor="@color/pink"
                    android:textSize="24dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="40dp"
                    android:text="Encaminhar para centro especializado"
                    android:textSize="18dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>