<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.CondutasMenos40">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="405dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/image3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="75dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="• A1 - Nódulo palpável:"
        android:textColor="@color/pink"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

        <TextView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="40dp"
            android:text="Solicitar US de mamas."
            android:textSize="18dp" />

    </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC" />

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="105dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="• A2 - Assintomática:"
        android:textColor="@color/pink"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="45dp"
                    android:text="Orientações higienico-dietéticas e exame clínico das mamas."
                    android:textSize="18dp" />

     </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC" />

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="225dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="• A3 - Histórico familiar de câncer de mama:"
        android:textColor="@color/pink"
        android:textSize="24dp"
        android:textStyle="bold|italic" />

        <TextView
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Digite a idade em que o familiar do pacinte foi diagnosticado com o câncer"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/campoIdade"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:ems="10"
            android:inputType="number" />

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Calcular"
         android:layout_gravity="center"
         android:layout_marginTop="75dp"
         android:id="@+id/botaoCalcular"/>


    </android.support.v7.widget.CardView>

        <Button
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:id="@+id/botaoResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_signup"
            android:clickable="true"
            android:padding="14dp"
            android:text="Analisar resultado do exame"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="normal" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>