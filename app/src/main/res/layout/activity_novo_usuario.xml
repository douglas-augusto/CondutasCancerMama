<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="#fd4e5e"
    android:paddingRight="24dp"
    android:paddingLeft="24dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:src="@drawable/ic_account_circle" />

        <EditText
            android:id="@+id/campo_nome_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bkgrd_redlogin1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_person_outline_red_400_24dp"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#fe97a0" />

        <EditText
            android:id="@+id/campo_email_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bkgrd_redlogin1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_person_outline_red_400_24dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#fe97a0" />

        <EditText
            android:id="@+id/campo_senha_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bkgrd_redlogin1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_lock_red_400_24dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#fa97a0" />

        <EditText
            android:id="@+id/campo_repetir_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bkgrd_redlogin1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/ic_lock_red_400_24dp"
            android:ems="10"
            android:hint="Repetir senha"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#fa97a0" />

        <Button
            android:id="@+id/botao_cadastrar_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bkgd_red_2"
            android:clickable="true"
            android:padding="16dp"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="#f16371"
            android:textSize="18sp" />


</LinearLayout>