<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="#fd4e5e"
    android:paddingRight="24dp"
    android:paddingLeft="24dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:src="@drawable/ic_receipt" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/campoNomeMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bkgrd_redlogin1"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Nome do medicamento"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:textColorHint="#fe97a0" />

            <EditText
                android:id="@+id/campoQtdMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bkgrd_redlogin1"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Quantidade"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:textColorHint="#fe97a0" />

            <EditText
                android:id="@+id/campoFrequenciaMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bkgrd_redlogin1"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Frequancia por dia"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:textColorHint="#fa97a0" />

            <EditText
                android:id="@+id/campoHorarioMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bkgrd_redlogin1"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="HorÃ¡rios"
                android:inputType="number"
                android:maxLines="1"
                android:padding="16dp"
                android:textColorHint="#fa97a0" />

            <Button
                android:id="@+id/botaoCadastrarMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bkgd_red_2"
                android:clickable="true"
                android:padding="16dp"
                android:text="Cadastrar"
                android:textAllCaps="false"
                android:textColor="#f16371"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>